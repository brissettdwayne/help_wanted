<!DOCTYPE html>
<html ng-app="HelpWanted">

  <head>
    <meta charset="utf-8">
    <title>Help Wanted</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link href='https://fonts.googleapis.com/css?family=Walter+Turncoat' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/javascripts/controllers/main.js" charset="utf-8"></script>
    <script src="/javascripts/services/postingsAPI.js" charset="utf-8"></script>
    <script src="/javascripts/app.js"></script>
  </head>

  <body ng-controller="MainController">

    <header >
      <h1 class="pure-u-1"><%= title %></h1>
    </header>

      <div class="form">
        <form class="pure-form">
          <input type="text" placeholder="Name" ng-model="formData.name">
          <select name="option" ng-model="formData.option">
            <option ng-repeat="option in options" value="{{option}}" >{{option}}</option>
          </select>
          <input type="text" placeholder="Contact Info" ng-model="formData.contactInfo">
          <input type="text"  placeholder="Skills" ng-model="formData.skills">
          <button class="pure-button pure-button-primary" type="submit" name="button" ng-click="createPost(newPost)">Create</button>
        </form>
      </div>

      <div class="content">
        <table align="center" class="pure-table pure-table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Contact Type</th>
              <th>Contact Info</th>
              <th>Skills</th>
            </tr>
          </thead>

          <tbody>
            <tr ng-repeat="post in postings">
              <td>{{post.name}}</td>
              <td>{{post.option}}</td>
              <td>{{post.contactInfo}}</td>
              <td>{{post.skills}}<span><a ng-click="deletePosting(post)">X</a></span></td>
            </tr>

          </tbody>
        </table>



      </div>

    <!-- <pre>
      {{ formData }}
    </pre> -->

  </body>
</html>
